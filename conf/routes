# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /api/users/{userId}/achievements/?      OAuth2.find
POST    /api/users/{userId}/achievements/?      OAuth2.create

GET     /api/users/{id}                         Users.getResource
GET     /api/users/?                            Users.getResources

POST    /sessions                               Sessions.create
GET     /login/?                                Application.login

GET     /rooms                                  Rooms.index

WS      /ws/rooms/join                          RoomsSocket.join

GET     /lobbies/new                            Lobbies.newLobby
GET     /lobbies/{<[0-9]+>id}/?                    Lobbies.show

POST    /token                                  OAuth2.token

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
